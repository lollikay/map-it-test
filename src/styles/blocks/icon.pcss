.icon {
  &-x {
    position: relative;
    display: block;
    width: 100%;
    height: 2px;
    background: currentColor;
    transform: rotate(45deg);
    
    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 100%;
      height: 2px;
      background: currentColor;
      transform: translate(-50%, -50%) rotate(90deg);
    }
  }
}