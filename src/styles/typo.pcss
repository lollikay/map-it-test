h1,
h2 {
  margin: 1em 0 0.5em;
  line-height: 1.25;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

h1 {
  font-size: 2rem;
  color: var(--c-theme);

  @media (min-width: 768px) {
    font-size: 2.5rem;
  }
}

h2 {
  font-size: 1.75rem;

  @media (min-width: 768px) {
    font-size: 2rem;
  }
}

